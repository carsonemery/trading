

load_dotenv()
os.environ['PGPASSFILE'] = os.getenv("PGPASS_PATH")
wrds_username = os.getenv("WRDS_username")

# ----------------------------------------------------------------------------------
# 2. TAQ DATA (Trade and Quote - Millisecond Resolution)
# ----------------------------------------------------------------------------------
# Library: taqmsec
# Table:   cqm (Consolidated Quotes)
# ----------------------------------------------------------------------------------

print("Connecting to TAQ...")

with wrds.Connection(wrds_username=wrds_username) as db:
    
    print("\n--- TAQ CONSOLIDATED QUOTES (taqmsec.cqm) ---")
    
    # Warning: TAQ tables are massive. Always filter by Date and Limit rows.
    query_taq = """
    SELECT date, time_m, sym_root, bid, ask, bidsiz, asksiz
    FROM taqmsec.cqm
    WHERE date = '2024-01-04'
    LIMIT 5
    """
    
    try:
        df = db.raw_sql(query_taq)
        print(df)
    except Exception as e:
        print(f"Query Failed: {e}")
        
print("\nTAQ Connection Closed.")
